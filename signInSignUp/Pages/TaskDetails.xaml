<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="signInSignUp.Pages.TaskDetails"
             Title="Task Details"
             BackgroundColor="FloralWhite">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Task Name" FontSize="20" FontAttributes="Bold"/>
            <Entry x:Name="TaskNameEntry" Placeholder="Enter task name"/>

            <Label Text="Description" FontSize="20" FontAttributes="Bold"/>
            <Editor x:Name="TaskDescriptionEditor" Placeholder="Enter description" AutoSize="TextChanges"/>

            <Button Text="Save Task" Clicked="OnSaveTaskClicked"
                    BackgroundColor="DarkOliveGreen" TextColor="White" CornerRadius="10"/>

            <Label x:Name="StatusLabel" TextColor="Green" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
