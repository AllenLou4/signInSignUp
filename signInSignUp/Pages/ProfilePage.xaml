<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="signInSignUp.Pages.ProfilePage"
             BackgroundColor="FloralWhite">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <AbsoluteLayout Grid.Row="0">
            <Image
                Source="profile_picture.png"
                WidthRequest="450"
                HeightRequest="500"
                Aspect="AspectFill"
                AbsoluteLayout.LayoutBounds="0,2.5,1,0"
                AbsoluteLayout.LayoutFlags="All" />

            <Label
                Text="Some Name Young"
                BackgroundColor="#4F6D5E"
                TextColor="White"
                Padding="20,20,20,20"
                FontSize="20"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                AbsoluteLayout.LayoutBounds="0,18,230,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Opacity="0.8"/>
        </AbsoluteLayout>

        <VerticalStackLayout
            Margin="0,400,0,0" 
            Padding="20"
            Spacing="20"
            Grid.Row="1">
            <Label
                Text="somenameyoung@example.com"
                FontSize="20"
                FontAttributes="Bold"
                HorizontalOptions="Start" />
            <Label
                Text="Completed Tasks: 1,000,000"
                FontSize="18"
                HorizontalOptions="Start" />
            <Label
                Text="Pending Tasks: 0"
                FontSize="18"
                HorizontalOptions="Start" />
            <Button
                x:Name="SignOutButton"
                Text="SIGN OUT"
                TextColor="#333333"
                FontAttributes="Bold"
                Clicked="OnSignOutClicked"
                SemanticProperties.Hint="Press to sign out"
                VerticalOptions="End" />
        </VerticalStackLayout>

        <Border Grid.Row="2" BackgroundColor="FloralWhite" Stroke="Gray" StrokeThickness=".5" HeightRequest="60">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0"
               BackgroundColor="{Binding ToDoBgColor}"
               CornerRadius="20"
               Padding="15,0,20,0"
               HasShadow="False"
               HorizontalOptions="Center"
               VerticalOptions="Center">
                    <ImageButton Source="{Binding ToDoIcon}"
                         HeightRequest="40"
                         WidthRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnActiveClicked" />
                </Frame>

                <Frame Grid.Column="1"
               BackgroundColor="{Binding FinishedBgColor}"
               CornerRadius="20"
               Padding="15,0,20,0"
               HasShadow="False"
               HorizontalOptions="Center"
               VerticalOptions="Center">
                    <ImageButton Source="{Binding FinishedIcon}"
                         HeightRequest="24"
                         WidthRequest="24"
                         BackgroundColor="Transparent"
                         Clicked="OnFinishedClicked" />
                </Frame>

                <Frame Grid.Column="2"
               BackgroundColor="{Binding ProfileBgColor}"
               CornerRadius="20"
               Padding="15,0,20,0"
               HasShadow="False"
               HorizontalOptions="Center"
               VerticalOptions="Center">
                    <ImageButton Source="{Binding ProfileIcon}"
                         HeightRequest="24"
                         WidthRequest="24"
                         BackgroundColor="Transparent"
                         Clicked="OnProfileClicked" />
                </Frame>

            </Grid>
        </Border>
    </Grid>
</ContentPage>